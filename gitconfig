[user]
  name = Leo Picado
  email = leopic@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
  interactive = auto
[core]
  editor = vim --noplugin
  excludesfile = ~/.gitignore_global
  ignorecase = true
  autocrlf = input
[help]
  autocorrect = 3
[alias]
  vs = diff -w --word-diff HEAD^
  alamierda = reset --hard
  lg=log --graph --pretty=format:'%Cred%h%Creset -%d%Creset %s %Cgreen(%cr) <%an>%Creset' --abbrev-commit --date=relative
  gk=log --graph --abbrev-commit --pretty=oneline --decorate
  fts=checkout --theirs
  ftw=checkout --ours
  st=status
  co=commit -v
  di=diff
  undo=reset --soft HEAD^
  pldv=pull origin develop
  chk=checkout
  nbr=checkout -b
[push]
  default = simple
